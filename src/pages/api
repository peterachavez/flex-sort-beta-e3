// src/api/create-checkout-session.ts
import Stripe from 'stripe'
import { VercelRequest, VercelResponse } from '@vercel/node'

const stripe = new Stripe(process.env.STRIPE_SECRET_KEY!, {
  apiVersion: '2024-04-10',
})

export default async function handler(req: VercelRequest, res: VercelResponse) {
  if (req.method !== 'POST') {
    return res.status(405).end('Method Not Allowed')
  }

  try {
    const { priceId, tier } = JSON.parse(req.body)

    const session = await stripe.checkout.sessions.create({
      payment_method_types: ['card'],
      mode: 'payment',
      line_items: [
        {
          price: priceId,
          quantity: 1,
        },
      ],
      metadata: {
        tier,
      },
      success_url: `${process.env.NEXT_PUBLIC_BASE_URL}/results?success=true`,
      cancel_url: `${process.env.NEXT_PUBLIC_BASE_URL}/results?canceled=true`,
    })

    res.status(200).json({ url: session.url })
  } catch (error) {
    console.error('Checkout session error:', error)
    res.status(500).json({ error: 'Internal Server Error' })
  }
}